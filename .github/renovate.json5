{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended", ":enablePreCommit", "group:allNonMajor"],
  schedule: ["* 2 * * 1"],
  prHourlyLimit: 4,
  timezone: "America/Los_Angeles",
  rangeStrategy: "widen",
  lockFileMaintenance: {
    enabled: true,
  },
  // The below is required by mmkal/runovate
  // SEE: https://github.com/mmkal/runovate/blob/676a208cba11fc44d3e06177e64f4601ae05f340/action.yml#L127-L132
  baseBranches: ["deps"],
  automerge: true,
  automergeType: "branch",
  fetchChangeLogs: "branch",
}
